<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="string请求"
            android:background="@drawable/button_secondpage_selector"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_jsonObject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="jsonObject请求"
            android:background="@drawable/button_secondpage_selector"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_jsonArray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="jsonArray请求"
            android:background="@drawable/button_secondpage_selector"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_xml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xml请求"
            android:background="@drawable/button_secondpage_selector"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btn_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示图片"
            android:background="@drawable/button_secondpage_selector"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>