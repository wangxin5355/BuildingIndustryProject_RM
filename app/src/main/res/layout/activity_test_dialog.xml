        <Button
            android:id="@+id/btn_test_dialog_width_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 dialog ----width_height"
            android:background="@drawable/button_secondpage_selector"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_test_dialog_alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 dialog ----alpha"
            android:background="@drawable/button_secondpage_selector"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_test_loading_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试loading dialog"
            android:background="@drawable/button_secondpage_selector"
            android:layout_marginBottom="10dp"/>
